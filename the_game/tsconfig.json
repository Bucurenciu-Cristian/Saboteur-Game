{
  "compilerOptions": {
    "target": "ES6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": false,
    "esModuleInterop": true,
    "noEmitOnError": false,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "allowJs": true,
    "downlevelIteration": true,
    "baseUrl": "./",
    "declaration": true,
    "paths": {
      "@src/*": [
        "src/*"
      ],
      "@shared/*": [
        "src/shared/*"
      ],
      "@components/*": [
        "src/components/*"
      ],
      "@cards/*": [
        "src/BusinessLogic/Cards/*"
      ],
      "@engine/*": [
        "src/BusinessLogic/GameEngine/*"
      ],
      "@hooks/*": [
        "src/hooks/*"
      ],
      "@images/*": [
        "public/images/SaboteurImagesSingle/"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
